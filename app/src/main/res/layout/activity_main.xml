<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.dfms.android7.MainActivity">
<TextView
    android:id="@+id/tv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="takePhotoNoCompress"
        android:text="takePhotoNoCompress" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="installApk"
        android:text="installApk"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/id_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <ImageView
        android:id="@+id/gaosi"
        android:layout_width="200dp"
        android:layout_height="200dp"

        />
    <Button
        android:text="Recyclerview"
        android:id="@+id/btn_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:text="standard"
        android:id="@+id/standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="singleTop"
        android:id="@+id/singleTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="singleTask"
        android:id="@+id/singleTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="singleInstance"
        android:id="@+id/singleInstance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
